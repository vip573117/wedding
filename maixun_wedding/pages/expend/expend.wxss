/* pages/expend/expend.wxss */

page {
  background-color: #f5f5f5;
}

.icon-wrap {
  width: 100%;
  padding-top: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.icon-item {
  width: 151rpx;
  text-align: center;
  font-size: 12px;
  display: inline-block;
  margin-bottom: 30rpx;
}

.icon-txt {
  display: block;
  color: #8e8e8e;
}

.icon {
  width: 86rpx;
  height: 86rpx;
}

.expend-wrap {
  background-color: #fff;
  padding: 40rpx 40rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.expend-icon {
  float: left;
}

.expend {
  width: 510rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.submit-wrap {
  width: 100%;
  margin-top: 50rpx;
  text-align: center;
}

.submit-pic {
  width: 690rpx;
  height: 87rpx;
}

.btn-wrap {
  position: absolute;
  top: 740rpx;
  width: 100%;
  z-index: 2;
}

.submit-btn {
  width: 690rpx;
  height: 87rpx;
  margin: 0 auto;
  opacity: 0;
}

.icon-input {
  width: 70%;
  display: inline-block;
}

.right-input {
  width: 30%;
  float: right;
  text-align: right;
}
