view{
  box-sizing: border-box;
}
.bg {
  background-color: #f5f5f5;
}

.left-icon {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-right: 33rpx;
}

.title {
  vertical-align: middle;
  color: #97c2fa;
  font-size: 0.8rem;
}

.group {
  margin-top: 40rpx;
}

.item {
  width: 100%;
  background-color: #fff;
  padding: 10px 15px;
  border-bottom: 1px solid #f5f5f5;
}

.date {
  float: right;
  color: #888;
  font-size: 0.8rem;
  margin-top: 9rpx;
}

.input {
  margin-top: 9rpx;
  float: right;
  width: 370rpx;
  text-align: right;
  color: #888;
  font-size: 0.8rem;
  font-weight: normal;
}

.wrap {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 700rpx;
}

.submit {
  width: 690rpx;
  height: 87rpx;
}

.my-area {
  border: 1px solid #75b1f9;
  display: block;
  width: 96%;
  height: 200rpx;
  border-radius: 6px;
  font-size: 1rem;
  padding: 0 5px;
  color: #888;
  margin: 0 auto;
}

.btn-wrap {
  width: 100%;
  position: absolute;
  top: 700rpx;
}

.submit-btn {
  margin: 0 auto;
  width: 690rpx;
  height: 87rpx;
  opacity: 0;
}
